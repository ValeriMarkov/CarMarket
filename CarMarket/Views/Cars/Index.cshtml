@model List<Car>

@{
    ViewData["Title"] = "List of Cars";
}

    <div class="row">
        @foreach (var car in Model)
        {
            <div class="col-md-4 col-xs-6 border-primary mb-3">
                <div class="card mb-3" style="max-width: 540px;">
                    <div class="row g-0">
                        <div class="col-md-12";>
                            <div class="card-header text-white bg-info">
                                <p class="card-text">
                                    <h5 class="card-title">
                                        <p onclick="editCar('@car.Id')">@car.Brand</p>
                                        @car.Model
                                        <a class="text-white float-right" asp-controller="Cars" asp-action="EditCar" asp-route-id="@car.Id"><i class="bi bi-pencil-square"></i></a>
                                    </h5>
                                </p>
                            </div>`
                        </div>
                        <div class="col-md-6">
                            <img src="@car.Picture" width="100%" height="100%" style="object-fit "alt="@car.Picture">
                        </div>
                        <div class="col-md-6">
                            <div class="card-body">
                                <p class="card-text"><b>Model: </b>@car.Model</p>
                                <p class="card-text"><b>Engine: </b>@car.Engine</p>
                                <p class="card-text"><b>Manufacture Date: </b>@car.ManufactureDate</p>
                                <p class="card-text"><b>Total mileage: </b>@car.TotalMileage</p>
                                <p class="card-text ">
                                    <b>Status: </b>
                                    <span class="badge bg-success text-white">AVAILABLE</span>
                                </p>

                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="card-footer ">
                                <p class="card-text">
                                    <a class="btn btn-outline-primary float-right" asp-action="Details" asp-route-id="@car.Id">
                                        <i class="bi bi-eye-fill"></i> Show Details
                                    </a>
                                    <a class="btn btn-success text-white" style="background-color: forestgreen;">
                                        Price: @car.SalePrice.ToString("c")
                                    </a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @await Html.PartialAsync("_CreateItem", "Cars")

<script>
    const editCar = (id) => {
        window.location = `/Cars/EditCar/${id}`
    }
</script>