@model IEnumerable<Office>

@{
    ViewData["Title"] = "List of offices";
}


<div class="row">
    <div class="col-md-8 offset-md-2">

        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.PictureURL)</th>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Location)</th>
                    <th>@Html.DisplayNameFor(model => model.Manager)</th>
                    <th>@Html.DisplayNameFor(model => model.Number)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var office in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@office.PictureURL" style="max-width:150px" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelOffice => office.Name)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelOffice => office.Location)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelOffice => office.Manager)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelOffice => office.Number)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary"><i class="bi bi-pencil-square">Edit</i></a> |
                            <a class="btn btn-danger text-white"><i class="bi" bi-trash></i>Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>